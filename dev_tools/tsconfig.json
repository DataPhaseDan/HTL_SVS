{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Bundler mode */
    "composite": true,
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Formatter */
    "plugins": [
      {"name": "biomejs"}
    ]
  },
  "include": [ "app/login.tsx", "app/main.tsx", "app/noten.tsx", "app/notfound.tsx", "app/persdaten.tsx", "app/server.ts", "app/tagesschule1.tsx", "app/tagesschule2.tsx", "app/vite-env.d.ts", "app/abendschule1.tsx", "app/abendschule2.tsx", "app/adminpanel.tsx", "app/ausbildung.tsx", "app/erziehungsberechtigte.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}