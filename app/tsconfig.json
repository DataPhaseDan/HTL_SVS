{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    /* Linting */
    "strict": true,
     /* Formatter */
    "plugins": [
      {
        "name": "biomejs"
      }
    ]
  },
  "include": [
    "login.tsx",
    "main.tsx",
    "noten.tsx",
    "notfound.tsx",
    "persdaten.tsx",
    "tagesschule1.tsx",
    "tagesschule2.tsx",
    "vite-env.d.ts",
    "abendschule1.tsx",
    "abendschule2.tsx",
    "adminpanel.tsx",
    "ausbildung.tsx",
    "erziehungsberechtigte.tsx",
    "kontakt.tsx"
  ],
}