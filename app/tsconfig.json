{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "NodeNext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    /* Bundler mode */
    "composite": true,
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    /* Formatter */
    "plugins": [
      {
        "name": "biomejs"
      }
    ]
  },
  "include": [
    "login.tsx",
    "main.tsx",
    "noten.tsx",
    "notfound.tsx",
    "persdaten.tsx",
    "tagesschule1.tsx",
    "tagesschule2.tsx",
    "vite-env.d.ts",
    "abendschule1.tsx",
    "abendschule2.tsx",
    "adminpanel.tsx",
    "ausbildung.tsx",
    "erziehungsberechtigte.tsx"
  ],
}